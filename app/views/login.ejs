<%- include('./partials/header', {title:'Log In|ELearning'}); %>
<%- include('./partials/navbar', {pagename:'login', currentuser:currentuser}); %>

  <div class="container">
        <div class="row-content">
            <div class="col-12">
                Don't have an account? <a href="/signup">Sign Up</a>
            </div>
        </div>

        <div class="row row-content">
            <div class="col-10 col-md-8 col-lg-6">
                <form class="form-example" action="" method="post"> 
                    <h3 class="text-secondary text-height">Log In</h1>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control username" id="email" placeholder="Email" name="username" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control password" id="password" placeholder="Password" name="password" required>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary btn-customized">Log In</button>
                    </div>
                </form>
            </div>
        </div> 

        <div class="row-content"></div>
    </div>

<%- include('./partials/footer'); %>