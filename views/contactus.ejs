            <div class="col-12 col-sm-11">
                <div class="btn-group" role="group">
                    <a role="button" class="btn btn-primary" href="tel:+8801608537383"><i
                            class="fa fa-phone"></i>Call</a>
                    <a role="button" class="btn btn-success" href="mailto:dcode180042@gmail.com"><i
                            class="fa fa-envelope-o"></i>Email</a>
                </div>
            </div>
        </div>

        <div class="row row-content">
            <div class="col-12">
                <h4 class="text-secondary text-height">Send us your Feedback</h4>
            </div>
            <div class="col-12 col-md-9">
                <form>
                    <div class="form-group row">
                        <label for="fname" class="col-md-2 col-form-label">
                            First Name
                        </label>
                        <div class="col-md-10">
                            <input type="text" name="fname" id="fname" class="form-control" placeholder="First Name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-md-2 col-form-label">
                            Last Name
                        </label>
                        <div class="col-md-10">
                            <input type="text" name="lname" id="fname" class="form-control" placeholder="Last Name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="telno" class="col-12 col-md-2 col-form-label">
                            Contact No.
                        </label>
                        <div class="col-5 col-md-3">
                            <input type="tel" name="countrycode" id="countrycode" class="form-control"
                                placeholder="Country Code">
                        </div>
                        <div class="col-7 col-md-7">
                            <input type="tel" name="phoneno" id="phoneno" class="form-control"
                                placeholder="Phone Number">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-md-2 col-form-label">
                            Email
                        </label>
                        <div class="col-md-10">
                            <input type="email" name="email" id="email" class="form-control" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6 offset-md-2">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="approve" id="approve" value="">
                                <label class="form-check-label" for="approve">
                                    <strong>May we contact you?</strong>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-3 offset-md-1">
                            <select class="form-control">
                                <option>Email</option>
                                <option>Telephone</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="Feedback" class="col-md-2 col-form-label">Your feedback</label>
                        <div class="col-md-10">
                            <textarea class="form-control" id="Feedback" name="Feedback" , rows="12"
                                placeholder="Write your feedback here"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="offset-md-2 col-md-10">
                            <button type="submit" class="btn btn-primary">
                                Send Feedback
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

